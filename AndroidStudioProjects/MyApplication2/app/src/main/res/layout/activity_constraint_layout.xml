<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 输入提示文本 -->
    <TextView
        android:id="@+id/tv_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintMarginStart="16dp"
        app:layout_constraintMarginTop="16dp" />

    <!-- 显示结果的文本框 -->
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#D4C8A8"
        android:gravity="end|center_vertical"
        android:paddingEnd="8dp"
        android:text="0.0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_input"
        app:layout_constraintTop_toBottomOf="@+id/tv_input"
        app:layout_constraintMarginTop="8dp" />

    <!-- 第一行按钮：7、8、9、+ -->
    <Button
        android:id="@+id/btn_7"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="@+id/tv_result"
        app:layout_constraintTop_toBottomOf="@+id/tv_result"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintMarginTop="16dp" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/btn_7"
        app:layout_constraintTop_toTopOf="@+id/btn_7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/btn_8"
        app:layout_constraintTop_toTopOf="@+id/btn_7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/btn_9"
        app:layout_constraintTop_toTopOf="@+id/btn_7"
        app:layout_constraintWidth_percent="0.25" />

    <!-- 第二行按钮：4、5、6、* -->
    <Button
        android:id="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintMarginTop="8dp" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/btn_4"
        app:layout_constraintTop_toTopOf="@+id/btn_4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/btn_5"
        app:layout_constraintTop_toTopOf="@+id/btn_4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/btn_6"
        app:layout_constraintTop_toTopOf="@+id/btn_4"
        app:layout_constraintWidth_percent="0.25" />

    <!-- 第三行按钮：1、2、3、- -->
    <Button
        android:id="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintMarginTop="8dp" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/btn_1"
        app:layout_constraintTop_toTopOf="@+id/btn_1"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toTopOf="@+id/btn_1"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_subtract"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/btn_3"
        app:layout_constraintTop_toTopOf="@+id/btn_1"
        app:layout_constraintWidth_percent="0.25" />

    <!-- 第四行按钮：.、0、=、÷ -->
    <Button
        android:id="@+id/btn_dot"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="."
        app:layout_constraintStart_toStartOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintMarginTop="8dp" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/btn_dot"
        app:layout_constraintTop_toTopOf="@+id/btn_dot"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/btn_0"
        app:layout_constraintTop_toTopOf="@+id/btn_dot"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="÷"
        app:layout_constraintStart_toEndOf="@+id/btn_equal"
        app:layout_constraintTop_toTopOf="@+id/btn_dot"
        app:layout_constraintWidth_percent="0.25" />
</androidx.constraintlayout.widget.ConstraintLayout>